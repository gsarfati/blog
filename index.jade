  .grid
    .metrics
      .metric
        a(href="https://trello.com/b/M4LT8OUE/makestartup")
          h1.picto
            img.picto(src="img/trello.png")
            span Board Trello
      .metric
        h1 Nombre de Sprint
      .metric
        h1 Burndown chart
      .metric
        h1 Chiffre d'affaire
      .metric
        h1 Capital
      .metric
        h1 Associés
      .metric
        h1 Clients
      .metric
        h1 Feedback
      .metric
        h1 Fond levés
      .metric
        h1 Résolution des problemes
      .metric
        h1 Nombre de jour depuis la creation de l'entreprise
    .timeline

    .articles
      |{% for post in site.posts %}
      .post

        .content
          .link: a(href="{{ post.url | prepend: site.baseurl }}") {{ post.title }}
          a(href="{{ post.url | prepend: site.baseurl }}")
          .cover(style="background-image: url('{{ post.cover }}')")
          .summary {{ post.summary }}
        .info
          .date

            .text.
              {{ post.date | date: '%d' }} {% assign m = post.date | date: "%-m" %}
              {% case m %}
                {% when '1' %} janvier
                {% when '2' %} février
                {% when '3' %} mars
                {% when '4' %} avril
                {% when '5' %} mai
                {% when '6' %} juin
                {% when '7' %} juillet
                {% when '8' %} août
                {% when '9' %} septembre
                {% when '10' %} octobre
                {% when '11' %} novembre
                {% when '12' %} décembre
              {% endcase %} {{ page.date | date: '%Y' }}


      |{% endfor %}



